#include <iostream> // Define iostream
using namespace std; // menggunakan std
int main()
{
    int Jumdetik;
    int Jam;
    int Menit;
    int Detik;
    int Sisa;

    cout<<"Berapakah waktunya? Ku ingin tahu..."<<endl;
    cin >> Jumdetik;

  Jam = Jumdetik / 3600;
  Sisa = Jumdetik % 3600;
  Menit = Sisa / 60;
  Detik = Sisa % 60;
  
  Detik = Detik + 1;

    cout<<Jam<<"jam"<<endl;
    cout<<Menit<<" menit"<<endl;
    cout<<Detik<<" detik"<<endl;


return 0;
}
